<%- include ("../partials/header") %>

<div class="container">
	<div class="row">

		<h1 style="text-align: center">Modifica un itinerario</h1>
		
		<div style="width: 30%; margin: 30px auto;">
			
			<form action="/itinerari/<%= itinerario._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="itinerario[name]" value="<%= itinerario.name %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="itinerario[image]" value="<%= itinerario.image %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="itinerario[description]" value="<%= itinerario.description %>">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Invia!</button>
				</div>
			</form>
			<a href="/itinerari">Vai indietro</a>
		</div>
	</div>
</div>
<%- include ("../partials/footer") %>

