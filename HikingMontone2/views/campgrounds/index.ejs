<%- include ("../partials/header") %>

<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>Benvenuto a Hiking Montone!</h1>
			<p>Visualizza i nostri itinerari selezionati della vallata</p>
			<p>
				<a class="btn btn-primary btn-large" href="/itinerari/new">Aggiungi un nuovo itinerario</a>
			</p>
		</div>
	</header>
	
	<div class="row text-center" style="display:flex; flex-wrap:wrap">
		<% itinerari.forEach(function(itinerario){ %>
				<div class="col-md-3 col-sm-6">
					<div class="thumbnail">
						<img src="<%= itinerario.image %>">
						<div class="caption">
							<h4>
								<%= itinerario.name %>
							</h4>
						</div>
						<p>
							<a href="/itinerari/<%= itinerario._id %>" class="btn btn-primary">More Info</a>
						</p>
					</div>
				</div>
		<% }); %>
	</div>
</div>

<%- include ("../partials/footer") %>